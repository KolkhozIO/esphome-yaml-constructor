{
  "type": "object",
  "title": "esphome config",
  "required": [
    "esphome",
    "esp32"
  ],
  "dallas": {
    "items": {
      "type": "object",
      "default": {},
      "title": "A Schema",
      "required": [
        "pin"
      ],
      "properties": {
        "pin": {
          "$ref": "#/definitions/properties/pin"
        }
      }
    },
    "title": "The dallas Schema",
    "type": "array"
  },
  "properties": {
    "esphome": {
      "type": "object",
      "default": null,
      "title": "esphome section",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "default": "",
          "title": "name of the board"
        }
      }
    },
    "esp32": {
      "type": "object",
      "title": "esp32 section",
      "required": [
        "board",
        "framework"
      ],
      "properties": {
        "board": {
          "type": "string",
          "default": "esp32doit-devkit-v1",
          "title": "board name",
          "enum": [
            "esp32doit-devkit-v1",
            "nodemcu-32s"
          ]
        },
        "framework": {
          "type": "object",
          "title": "framework",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "default": "arduino",
              "title": "framework type"
            }
          }
        }
      }
    },
    "logger": {
      "type": "object",
      "default": "test",
      "title": "The logger Schema"
    },
    "api": {
      "type": "object",
      "title": "The api Schema",
      "required": [
        "password"
      ],
      "properties": {
        "password": {
          "$ref": "#/definitions/properties/password"
        }
      }
    },
    "ota": {
      "type": "object",
      "title": "The ota Schema",
      "required": [
        "password"
      ],
      "properties": {
        "password": {
          "$ref": "#/definitions/properties/password"
        }
      }
    },
    "wifi": {
      "type": "object",
      "default": "",
      "title": "The wifi Schema",
      "required": [
        "ssid",
        "password",
        "ap"
      ],
      "properties": {
        "ssid": {
          "type": "string",
          "title": "The ssid Schema"
        },
        "password": {
          "$ref": "#/definitions/properties/password"
        },
        "ap": {
          "type": "object",
          "title": "The ap Schema",
          "required": [
            "ssid",
            "password"
          ],
          "properties": {
            "ssid": {
              "type": "string",
              "title": "The ssid Schema"
            },
            "password": {
              "$ref": "#/definitions/properties/password"
            }
          }
        }
      }
    },
    "captive_portal": {
      "type": "object",
      "title": "The captive_portal Schema"
    },
    "i2c": {
      "anyOf": [
        {
          "$ref": "#/definitions/i2c",
          "title": "one i2c"
        },
        {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/i2c"
              },
              {
                "$ref": "#/definitions/bus_id"
              }
            ]
          },
          "title": "multiple i2c"
        }
      ]
    },
    "uart": {
      "anyOf": [
        {
          "$ref": "#/definitions/uart",
          "title": "one uart"
        },
        {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/id"
              },
              {
                "$ref": "#/definitions/uart"
              },
              {
                "$ref": "#/definitions/stop_bits"
              }
            ]
          },
          "title": "multiple uart"
        }
      ]
    },
    "modbus": {
      "type": "object",
      "default": "",
      "title": "The modbus Schema",
      "required": [
        "id",
        "flow_control_pin"
      ],
      "properties": {
        "id": {
          "type": "string",
          "title": "The id Schema"
        },
        "flow_control_pin": {
          "type": "integer",
          "title": "The flow_control_pin Schema"
        }
      }
    },
    "modbus_controller": {
      "type": "array",
      "title": "modbus_controller",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "title": "modbus_controller schema",
            "required": [
              "id",
              "address",
              "modbus_id",
              "setup_priority"
            ],
            "properties": {
              "id": {
                "type": "string",
                "default": "epever",
                "title": "id"
              },
              "address": {
                "$ref": "#/definitions/properties/address"
              },
              "modbus_id": {
                "type": "string",
                "title": "modbus_id"
              },
              "setup_priority": {
                "type": "integer",
                "title": "setup_priority"
              }
            }
          }
        ]
      }
    },
    "sensor": {
      "type": "array",
      "title": "sensors",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/sensor/bme"
          },
          {
            "$ref": "#/definitions/sensor/dht"
          },
          {
            "$ref": "#/definitions/sensor/dallas"
          },
          {
            "$ref": "#/definitions/sensor/scd4x"
          },
          {
            "$ref": "#/definitions/sensor/pulse"
          },
          {
            "$ref": "#/definitions/sensor/mhz19"
          },
          {
            "$ref": "#/definitions/sensor/modbus_controller"
          },
          {
            "$ref": "#/definitions/sensor/adc"
          }
        ]
      }
    }
  },
  "definitions": {
    "i2c": {
      "type": "object",
      "title": "The i2c Schema",
      "required": [
        "sda",
        "scl",
        "scan"
      ],
      "properties": {
        "sda": {
          "type": "integer",
          "default": 21,
          "title": "sda pin"
        },
        "scl": {
          "type": "integer",
          "default": 22,
          "title": "scl pin"
        },
        "scan": {
          "type": "boolean",
          "default": true,
          "title": "device scan"
        }
      }
    },
    "bus_id": {
      "properties": {
        "bus_id": {
          "type": "string",
          "default": "bus_a",
          "title": "i2c bus name"
        }
      }
    },
    "uart": {
      "type": "object",
      "default": "",
      "title": "The uart Schema",
      "required": [
        "rx_pin",
        "tx_pin",
        "baud_rate"
      ],
      "properties": {
        "rx_pin": {
          "type": "string",
          "title": "The rx_pin Schema"
        },
        "tx_pin": {
          "type": "string",
          "title": "The tx_pin Schema"
        },
        "baud_rate": {
          "type": "integer",
          "title": "The baud_rate Schema"
        }
      }
    },
    "id": {
      "properties": {
        "id": {
          "type": "string",
          "title": "The id Schema"
        }
      }
    },
    "stop_bits": {
      "properties": {
        "stop_bits": {
          "type": "integer",
          "title": "The stop_bits Schema"
        }
      }
    },
    "sensor": {
      "adc": {
        "type": "object",
        "title": "The adc Schema",
        "required": [
          "platform",
          "pin",
          "name",
          "attenuation",
          "raw",
          "update_interval"
        ],
        "properties": {
          "platform": {
            "const": "adc",
            "default": "adc"
          },
          "pin": {
            "$ref": "#/definitions/properties/pin"
          },
          "name": {
            "type": "string",
            "default": "",
            "title": "name of the adc"
          },
          "attenuation": {
            "type": "integer",
            "default": 0,
            "title": "attenuation adc"
          },
          "update_interval": {
            "type": "string",
            "default": "60s",
            "title": "update_interval"
          },
          "raw": {
            "type": "boolean",
            "default": false,
            "title": "raw adc"
          }
        }
      },
      "bme": {
        "type": "object",
        "title": "bme schema",
        "required": [
          "platform",
          "temperature",
          "pressure",
          "humidity",
          "address",
          "update_interval"
        ],
        "properties": {
          "platform": {
            "const": "bme280",
            "default": "bme280"
          },
          "pressure": {
            "type": "object",
            "default": {},
            "title": "pressure sensor",
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "type": "string",
                "default": "bme_pressure",
                "title": "pressure sensor name"
              }
            }
          },
          "temperature": {
            "$ref": "#/definitions/properties/temperature"
          },
          "humidity": {
            "$ref": "#/definitions/properties/humidity"
          },
          "address": {
            "$ref": "#/definitions/properties/address"
          },
          "update_interval": {
            "$ref": "#/definitions/properties/update_interval"
          }
        }
      },
      "dht": {
        "type": "object",
        "title": "dht schema",
        "required": [
          "platform",
          "temperature",
          "humidity",
          "pin"
        ],
        "properties": {
          "platform": {
            "const": "dht",
            "default": "dht"
          },
          "temperature": {
            "$ref": "#/definitions/properties/temperature"
          },
          "humidity": {
            "$ref": "#/definitions/properties/humidity"
          },
          "pin": {
            "$ref": "#/definitions/properties/pin"
          }
        }
      },
      "dallas": {
        "type": "object",
        "title": "dallas schema",
        "required": [
          "platform",
          "name",
          "address"
        ],
        "properties": {
          "platform": {
            "const": "dallas",
            "default": "dallas"
          },
          "name": {
            "type": "string",
            "default": "dallas_temp",
            "title": "name"
          },
          "address": {
            "$ref": "#/definitions/properties/address"
          }
        }
      },
      "scd4x": {
        "type": "object",
        "title": "scd4x schema",
        "required": [
          "platform",
          "co2",
          "temperature",
          "humidity"
        ],
        "properties": {
          "platform": {
            "const": "scd4x",
            "default": "scd4x"
          },
          "co2": {
            "$ref": "#/definitions/properties/co2"
          },
          "temperature": {
            "$ref": "#/definitions/properties/temperature"
          },
          "humidity": {
            "$ref": "#/definitions/properties/humidity"
          }
        }
      },
      "pulse": {
        "type": "object",
        "title": "pulse counter schema",
        "required": [
          "platform",
          "pin",
          "name"
        ],
        "properties": {
          "platform": {
            "const": "pulse counter",
            "default": "pulse counter"
          },
          "pin": {
            "$ref": "#/definitions/properties/pin"
          },
          "name": {
            "type": "string",
            "default": "pulse_counter",
            "title": "pulse counter name"
          }
        }
      },
      "mhz19": {
        "type": "object",
        "title": "mhz19 schema",
        "required": [
          "platform",
          "co2",
          "temperature"
        ],
        "properties": {
          "platform": {
            "const": "mhz19",
            "default": "mhz19"
          },
          "co2": {
            "$ref": "#/definitions/properties/co2"
          },
          "temperature": {
            "$ref": "#/definitions/properties/temperature"
          }
        }
      },
      "modbus_controller": {
        "type": "object",
        "title": "modbus_controller schema",
        "required": [
          "platform",
          "modbus_controller_id",
          "name",
          "id",
          "register_type",
          "address",
          "unit_of_measurement",
          "value_type"
        ],
        "properties": {
          "platform": {
            "const": "modbus_controller",
            "default": "modbus_controller"
          },
          "modbus_controller_id": {
            "type": "string",
            "default": "epever",
            "title": "modbus_controller_id"
          },
          "name": {
            "type": "string",
            "title": "name"
          },
          "id": {
            "type": "string",
            "title": "id"
          },
          "register_type": {
            "type": "string",
            "title": "register_type"
          },
          "address": {
            "$ref": "#/definitions/properties/address"
          },
          "unit_of_measurement": {
            "type": "string",
            "title": "unit_of_measurement"
          },
          "value_type": {
            "type": "string",
            "title": "value_type"
          }
        }
      }
    },
    "properties": {
      "temperature": {
        "type": "object",
        "default": {},
        "title": "temperature sensor",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "default": "",
            "title": "temperature sensor name"
          },
          "oversampling": {
            "type": "string",
            "default": "16x",
            "title": "oversampling"
          }
        }
      },
      "humidity": {
        "type": "object",
        "default": {},
        "title": "humidity sensor",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "default": "",
            "title": "humidity sensor name"
          }
        }
      },
      "address": {
        "type": "string",
        "default": "",
        "title": "address"
      },
      "update_interval": {
        "type": "string",
        "default": "60s",
        "title": "update_interval"
      },
      "pin": {
        "type": "integer",
        "default": "",
        "title": "pin"
      },
      "co2": {
        "type": "object",
        "default": {},
        "title": "CO₂ sensor",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "default": "",
            "title": "CO₂ sensor name"
          }
        }
      },
      "password": {
        "type": "string",
        "default": "",
        "title": "The password Schema"
      }
    }
  }
}
